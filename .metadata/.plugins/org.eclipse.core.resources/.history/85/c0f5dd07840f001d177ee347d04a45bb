package portella.lucienne;

import java.util.InputMismatchException;
import java.util.Scanner;

public class Teste {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		Lista<Produtos> lista = new Lista<Produtos>(); // L > itens [0][1][2][3][4]

	

		int opcao = 1;
		int qnt = 0;
		while (opcao != 0) {
			opcao = obterOpcaoMenu(sc);

			switch (opcao) {
			case 1: {
				
				obterOpcaoMenu(sc);
			case 2:
				
				adicionarProdutos(sc, lista);	
			
			}
		}
	}

	protected static int obterOpcaoMenu(Scanner sc) {

		boolean entradaValida = false;
		int opcao = 0;

		while (!entradaValida) {
			System.out.println("Digite a opção desejada");
			System.out.println("1. Visualizar itens  na lista");
			System.out.println("2. Adicionar itens na lista ");
			System.out.println("3. Remover item da lista");
			System.out.println("4. Visualizar lista completa");
			System.out.println("5. Visualizar produtos mais baratos");
			System.out.println("6. Visualizar produtos mais caros");
			System.out.println("0. Sair");

			try {
				opcao = sc.nextInt();
				if (opcao >= 0 && opcao <= 6) {
					entradaValida = true;
				} else {
					System.out.println("Valor inválido! Digite novamente");
				}
			} catch (InputMismatchException i) {
				sc.nextLine();
				System.out.println("O valor não é um inteiro. Por favor digite um número de 0 à 6.\n");
			}

		}
		return opcao;

	}
	
	public static void adicionarProdutos(Scanner sc, Lista<Produtos> lista) {
		
		String produto = leInformacao("Nome do Produto: ", sc);
		String preco = leInformacao("Preço do produto: ", sc);
		
		Produtos produtos = new Produtos(produto, preco);
		
		lista.adicionarItem(produtos);
		System.out.println("Produto adicionado.");
		
	}
	
	public static String leInformacao(String msg, Scanner sc) {
		
		System.out.println(msg);
		String entrada = sc.nextLine();
		
		return entrada;
	}
	
	protected static void visualizarIten(Lista<Produtos> lista) {
			System.out.println(lista);
	}
	

	
	
}
